<h1>Movies</h1>

<ul><% @movies.each do |movie| %>
  <li>
    <%= link_to movie.title, movie_path(movie) %>
    <%= link_to "Delete",
        movie_path(movie),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
  </li>
<% end %>
</ul>
<br>
<p><%= link_to "+ Add a new movie", new_movie_path %></p>
