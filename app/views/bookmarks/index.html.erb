<h1>Bookmarks</h1>

<ul><% @bookmarks.each do |bookmark| %>
  <li>
    <%= link_to bookmark.comment, bookmark_path(bookmark) %>
    <%= link_to "Delete",
        bookmark_path(bookmark),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
  </li>
<% end %>
</ul>
<br>
<p><%= link_to "+ Add a new bookmark", new_bookmark_path %></p>
